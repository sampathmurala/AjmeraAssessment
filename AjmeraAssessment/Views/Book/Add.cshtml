@model AddBookViewModel

@{
    ViewData["Title"] = "Add";
}

@*<h1>Add</h1>*@

<h4>Add Book to @Model.AuthorName</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="Book" asp-action="Add">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group"> 
                <input asp-for="AuthorId" class="form-control" hidden /> 
            </div>
            <div class="form-group"> 
                <input asp-for="AuthorName" class="form-control" hidden /> 
            </div>
            <div class="form-group">
                <label asp-for="SelectedBooks" class="control-label">Books</label>
                <select asp-for="SelectedBooks" asp-items="Model.Books">
                    <option></option>
                </select>
                <span asp-validation-for="SelectedBooks" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Author" asp-action="Details" asp-route-id="@Model.AuthorId">Back to Author Details</a> |
    <a asp-controller="Book" asp-action="Create">Add New Book</a>  
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
